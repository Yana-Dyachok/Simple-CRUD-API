{
  "name": "simple-crud-api",
  "version": "1.0.0",
  "description": "A simple Node.js CRUD API that uses an in-memory database",
  "scripts": {
    "start": "nodemon ./src/index.ts",
    "start:dev": "nodemon ./src/index.ts",
    "start:prod": "tsc --build --clean && tsc && node dist/index.js",
    "start:multi": "nodemon ./src/horizontal-scaling/horizontal-scaling.ts",
    "lint": "eslint .",
    "format": "npx eslint src --fix",
    "test": "jest --coverage"
  },
  "keywords": [
    "cli",
    "simple-crud-api",
    "nodejs"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yana-Dyachok/Simple-CRUD-API"
  },
  "author": "Yana-Dyachok",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.7.5",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "babel-plugin-istanbul": "^7.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.11.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3",
    "uuid": "^10.0.0"
  }
}
